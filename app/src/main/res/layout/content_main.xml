<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main">

    <fragment
        android:id="@+id/nav_host_fragment_content_main"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        app:navGraph="@navigation/mobile_navigation" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="277dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="EMAIL"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="89dp" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="277dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="PASSWORD"
        android:inputType="textPassword"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="145dp" />

    <Button
        android:id="@+id/editTextText"
        android:layout_width="277dp"
        android:layout_height="48dp"
        android:backgroundTint="#FFEB3B"
        android:ems="10"
        android:inputType="text"
        android:text="CONTINUE AS GUEST"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="30dp" />

    <Button
        android:id="@+id/editTextText3"
        android:layout_width="277dp"
        android:layout_height="48dp"
        android:backgroundTint="#FD03CB"
        android:ems="10"
        android:inputType="text"
        android:text="SIGN IN"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="259dp" />

    <Button
        android:id="@+id/editTextText4"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="277dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="text"
        android:text="SIGN UP"
        android:textAlignment="center"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="307dp" />

    <Button
        android:id="@+id/editTextText5"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="170dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="text"
        android:text="FORGOT PASSWORD"
        android:textAlignment="textEnd"
        android:textColor="#3F51B5"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="174dp"
        tools:layout_editor_absoluteY="200dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- OR -"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.721" />

    <Button
        android:id="@+id/button3"
        android:layout_width="277dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#31ED39"
        android:text="sign in with Google"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="12sp"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="522dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="277dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#4872EF"
        android:text="SIGN in with FB"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="12sp"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="474dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="277dp"
        android:layout_height="wrap_content"
        android:text="BY CREATING AN ACCOUNT I AGREE TO THE T&C AND AGREE TO THE PRIVACY POLICY"
        android:textColor="@color/black"
        android:textSize="12sp"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="377dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
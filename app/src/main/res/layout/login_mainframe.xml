<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:src="@drawable/signupbg"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:layout_width="277dp"
            android:layout_height="48dp"
            android:layout_marginTop="128dp"
            android:layout_marginBottom="15dp"
            android:background="#BEC4DA"
            android:ems="10"
            android:hint=" EMAIL"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/editTextTextPassword"
            app:layout_constraintTop_toBottomOf="@+id/editTextText"
            tools:layout_editor_absoluteX="67dp" />

        <TextView
            android:id="@+id/policyAgreeTxt"
            android:layout_width="277dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="53dp"
            android:text="BY CREATING AN ACCOUNT I AGREE TO THE T&amp;C AND AGREE TO THE PRIVACY POLICY"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/signUpBtn"
            tools:layout_editor_absoluteX="67dp" />

        <Button
            android:id="@+id/fbSignInBtn"
            android:layout_width="277dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="67dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="67dp"
            android:layout_marginBottom="19dp"
            android:backgroundTint="#4872EF"
            android:text="SIGN in with FB"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/googleSignInBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintVertical_bias="0.5" />

        <Button
            android:id="@+id/googleSignInBtn"
            android:layout_width="277dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#31ED39"
            android:text="sign in with Google"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fbSignInBtn"
            tools:layout_editor_absoluteX="67dp"
            tools:layout_editor_absoluteY="634dp" />

        <Button
            android:id="@+id/frgtPwTxt"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="170dp"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:inputType="text"
            android:text="FORGOT PASSWORD"
            android:textAlignment="textEnd"
            android:textColor="#03A9F4"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/editTextText3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.721"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword" />

        <Button
            android:id="@+id/signUpBtn"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="277dp"
            android:layout_height="48dp"
            android:layout_marginBottom="7dp"
            android:ems="10"
            android:text="SIGN UP"
            android:textAlignment="center"
            android:textColor="#03A9F4"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/policyAgreeTxt"
            app:layout_constraintTop_toBottomOf="@+id/editTextText3"
            tools:layout_editor_absoluteX="67dp" />

        <Button
            android:id="@+id/editTextText3"
            android:layout_width="277dp"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#FD03CB"
            android:ems="10"
            android:text="SIGN IN"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/signUpBtn"
            app:layout_constraintTop_toBottomOf="@+id/frgtPwTxt"
            tools:layout_editor_absoluteX="67dp" />

        <Button
            android:id="@+id/editTextText"
            android:layout_width="277dp"
            android:layout_height="48dp"
            android:layout_marginTop="22dp"
            android:backgroundTint="#FFEB3B"
            android:ems="10"
            android:text="CONTINUE AS GUEST"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="64dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- OR -"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.692" />

        <EditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="277dp"
            android:layout_height="48dp"
            android:layout_marginTop="15dp"
            android:background="#BEC4DA"
            android:ems="10"
            android:hint=" PASSWORD"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAddress"
            tools:layout_editor_absoluteX="67dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>


